@model Livro

<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Paginas"></label>
    <input asp-for="Paginas" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="DataLancamento"></label>
    <input asp-for="DataLancamento" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Genero"></label>
    <select asp-for="Genero" class="form-control" asp-items="@Html.GetEnumSelectList<Genero>()">
        <option>Selecione</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Editora"></label>
    <select asp-for="EditoraId" class="form-control" asp-items="ViewBag.editoras">
        <option>Selecione</option>
    </select>
</div>
<div class="form-group">
    <input asp-for="Infantil" />
    <label asp-for="Infantil"></label>
</div>